//Source: https://github.com/jenkinsci/kubernetes-plugin/blob/master/README.md#container-group-support
podTemplate(containers: [
    containerTemplate(name: 'maven', image: 'maven:3.6.2-jdk-8', ttyEnabled: true, command: 'cat'),
    containerTemplate(name: 'golang', image: 'golang:1.13.3', ttyEnabled: true, command: 'cat')
  ]) {

    node(POD_LABEL) {
        stage('Get a Maven project') {
            git 'https://github.com/apache/maven.git'
            container('maven') {
                stage('Build a Maven project') {
                    sh """
                        cd maven-core/src/test/projects/lifecycle-executor/project-basic
                        mvn -B clean install
                    """
                }
            }
        }

        stage('Get a Golang project') {
            git url: 'https://github.com/golang/example.git'
            container('golang') {
                stage('Build a Go project') {
                    sh """
                    # Build it
                    cd hello
                    go build hello.go
                    
                    # Run it
                    ./hello
                    """
                }
            }
        }

    }
}
